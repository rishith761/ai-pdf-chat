{
  "version": 2,
  "builds": [
    { "src": "public/**", "use": "@vercel/static" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/pdf/(.*)", "dest": "/api/pdf/$1" },
    { "src": "/(?!api|pdf)(.*)", "dest": "/public/$1" },
    { "src": ".*", "dest": "/public/index.html" }
  ]
}
